<h1>Accredited Members</h1>

<br/>

<% form_tag members_path, :method => 'get' do %>
	<p>
		Last Name: <%= text_field_tag :search, params[:search] %>
		<%= submit_tag "Search", :name => nil %>
	</p>
<% end %>

<table class="listing">
  <tr>
    <th>Member Number</th>
    <th>Title</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Member Type</th>
    <th>Adjudicator CPD Points</th>
    <th>Coach CPD Points</th>
    <th></th>
  </tr>

<% for member in @members %>
  <tr class="<%= cycle('even', 'odd') %>">
    <td><%=link_to member.member_number, member_path(member) %></td>
    <td><%=h member.title %></td>
    <td><%=h member.first_name %></td>
    <td><%=h member.last_name %></td>
    <td><%=h member.member_type %></td>
    <td><%=h member.current_cpd_points %></td>
    <td><%=h member.current_cpd_points %></td>
    <td><%= link_to 'View Activities', member_completed_activities_path(member) %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @members %>

<br />


